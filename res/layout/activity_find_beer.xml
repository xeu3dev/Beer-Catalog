<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xeu3dev.beeradviser.FindBeerActivity"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/beerPhoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/beer_logo"
        android:scaleType="fitXY"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="top"
    android:weightSum="3">
    <Spinner
        android:id="@+id/typeBeer"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/beer_types">
    </Spinner>
    <Button
        android:id="@+id/findBeer"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_beer"
        android:onClick="onClickFindBeer"/>
    <Button
        android:id="@+id/clearBeer"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_beer"
        android:onClick="onClickClearBeer"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textBeer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/brands"
        android:gravity="center"
        android:textSize="25dp"
        android:hint="@string/search_result"
        />


</LinearLayout>
